@model List<ProjectX.ViewModels.Admin.UserProfileViewModel>

@{
    ViewData["Title"] = "Users";
}
<link rel="stylesheet" href="https://fonts.cdnfonts.com/css/satreva-neue" />
<h1 class="mt-1 mb-3 text-center"><span class="projectx-title"><b>Project<span style="color: #FD7EBF; font-size: 50px; margin-right: 15px;">X</span>Users</b></span></h1>

<div class="container mt-1 mb-3">
    <div class="row">
        <div class="col-md-9">
            <form asp-action="Index" method="get" class="form-inline">
                <div class="input-group mb-3 col-md-10">
                    <input type="text" class="form-control" name="searchQuery" placeholder="Search by Name, City, or Phone Number" value="@ViewBag.SearchQuery">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>
                <th>Profile Picture</th>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>City</th>
                <th>Phone Number</th>
                <th>Is Salon Owner</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <img src="@user.ProfilePictureUrl" alt="Profile Picture" style="max-width: 100px; max-height: 100px;">
                    </td>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.City</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.IsSalonOwner</td>
                    
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<style>
    .projectx-title {
        font-family: 'Satreva Neue', sans-serif;
    }
</style>