@model ProjectX.ViewModels.Admin.UserProfileViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <h1>User Details</h1>
    <hr />
    <div class="row">
        <div class="col-md-4 offset-md-4 text-center mb-4">
            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 200px;" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th scope="row">User Name</th>
                    <td>@Model.UserName</td>
                </tr>
                <tr>
                    <th scope="row">First Name</th>
                    <td>@Model.FirstName</td>
                </tr>
                <tr>
                    <th scope="row">Last Name</th>
                    <td>@Model.LastName</td>
                </tr>
                <tr>
                    <th scope="row">City</th>
                    <td>@Model.City</td>
                </tr>
                <tr>
                    <th scope="row">Phone Number</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-secondary" onclick="goBack()">Back</button>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>