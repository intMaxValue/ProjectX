@model ProjectX.ViewModels.Profile.CompleteProfileViewModel

<div class="row">
    <form asp-area="" asp-controller="UserProfile" asp-action="CompleteProfile" method="post" enctype="multipart/form-data" id="completeProfileForm">
        <div class="form-group mt-2 col-md-4">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group mt-2 col-md-4">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group mt-2 col-md-4">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group mt-2 col-md-4">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group mt-2 col-md-4">
            <label for="ProfilePictureUrl">Profile Picture</label>
            <div class="input-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="profilePicture" name="profilePicture">
                </div>
            </div>
            <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
        </div>

        <div class="col-md-4 text-md-right">
            <!-- Right align the button for medium screens and above -->
            <a href="@Url.Action("Index", "Salons")" class="btn btn-secondary mt-2 mb-2 ml-2">Back to All Salons</a>
            <button type="submit" class="btn btn-primary mt-2 mb-2 float-end">Complete Profile</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
