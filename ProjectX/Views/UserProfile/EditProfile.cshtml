@using System.Security.Claims
@model ProjectX.ViewModels.Profile.CompleteProfileViewModel

<div class="row">
    <form asp-controller="UserProfile" asp-action="CompleteProfile" method="post" enctype="multipart/form-data">
        <div class="form-group mt-2 col-md-4">
            <label for="FirstName">First Name</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required>
        </div>
        <div class="form-group mt-2 col-md-4">
            <label for="LastName">Last Name</label>
            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required>
        </div>
        <div class="form-group mt-2 col-md-4">
            <label for="City">City</label>
            <input type="text" class="form-control" id="City" name="City" value="@Model.City" required>
        </div>
        <div class="form-group mt-2 col-md-4">
            <label for="PhoneNumber">Phone Number</label>
            <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required>
        </div>
        <div class="form-group mt-2 col-md-4 text-center">
            <label for="ProfilePicture">Profile Picture</label>
            <input type="file" class="form-control-file" id="ProfilePicture" name="ProfilePicture">
        </div>
        <div class="col-md-4 text-md-right">
            <!-- Right align the button for medium screens and above -->
            <a href="@Url.Action("Index", "UserProfile",  new { id = User.FindFirstValue(ClaimTypes.NameIdentifier) })" class="btn btn-secondary mt-2 mb-2 ml-2">Back to Profile</a>
            <button type="submit" class="btn btn-primary mt-2 mb-2 float-end">Edit Profile</button>
        </div>
    </form>
</div>