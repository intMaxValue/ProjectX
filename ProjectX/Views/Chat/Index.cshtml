@model ProjectX.ViewModels.Chat.SalonChatViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mt-5">
                <div class="card-header text-center">
                    <h3 class="card-title">@Model.SalonName Live Chat</h3>
                    @if (!string.IsNullOrEmpty(Model.SalonProfilePictureUrl))
                    {
                        <img src="@Model.SalonProfilePictureUrl" alt="Salon Profile Picture" class="salon-chat-profile-picture img-thumbnail" />
                    }
                </div>
                <div class="card-body" style="overflow-y: auto; max-height: 300px;">
                    <!-- Set max height and overflow-y:auto for scrollbar -->
                    <div id="chatMessages">
                        @foreach (var message in Model.Messages)
                        {
                            <div class="message">
                                <strong>@message.SenderName</strong>: @message.Content
                                <span class="timestamp">@($"({message.Timestamp:yyyy-MM-dd HH:mm:ss})")</span>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer">
                    <form id="sendMessageForm" asp-controller="Chat" asp-action="SendMessage" data-chat-room-id="@Model.SalonId">
                        <div class="input-group">
                            <input type="text" id="newMessage" name="Content" class="form-control" placeholder="Type your message...">
                            <input type="hidden" name="username" value="@User.Identity.Name" /> <!-- Add a hidden input for username -->
                            <input type="hidden" name="chatRoomId" value="@Model.SalonId" /> <!-- Add a hidden input for chat room ID -->
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        var connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();

        connection.on("ReceiveMessage", function (username, message, timestamp) {
            var formattedTimestamp = timestamp ? `<span class="timestamp">${timestamp}</span>` : '';
            $("#chatMessages").append(`<div class="message"><strong>${username}</strong>: ${message} (${formattedTimestamp})</div>`);
        });


        connection.start().then(function () {
            console.log("SignalR connected");
        }).catch(function (err) {
            console.error(err.toString());
        });

        $("#sendMessageForm").submit(function (event) {
            event.preventDefault();
            var message = $("#newMessage").val();
            var username = $("input[name='username']").val(); // Retrieve username from the hidden input
            var chatRoomId = parseInt($("input[name='chatRoomId']").val(), 10); // Convert chatRoomId to integer
            connection.invoke("SendMessage", username, message, chatRoomId).catch(function (err) {
                console.error(err.toString());
            });
            $("#newMessage").val('');
        });
    </script>
}
