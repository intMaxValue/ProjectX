@model IEnumerable<ProjectX.ViewModels.Salon.SalonViewModel>

@{
    ViewData["Title"] = "Salons";
}

<h1 class="mt-4 mb-3">Salons</h1>

<div class="row">
    @foreach (var salon in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@salon.Name</h5>
                    <p class="card-text">@salon.Description</p>
                    <p class="card-text">Location: @salon.Address, @salon.City</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>