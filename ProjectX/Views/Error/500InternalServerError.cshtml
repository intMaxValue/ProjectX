@{
    ViewData["Title"] = "500 - Server Error";
    Layout = "_Layout";
}

<div class="background-placeholder"></div>

<div class="message">
    <h1>500</h1>
    <h3>Server Error</h3>
    <h2>It's not you, it's me...</h2>
    <!-- use window.history.back(); to go back -->
    <button onclick="window.history.back();">Go Back</button>
</div>

<style>
    /* Background Placeholder */
    .background-placeholder {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('@Url.Content("~/Images/Errors/500ErrorImg.jpg")');
        background-repeat: no-repeat;
        background-size: cover;
        z-index: -1;
    }

    /* Message Styles */
    .message {
        text-align: center;
        color: #eee;
        font-family: 'Roboto', sans-serif;
        padding: 20px;
        position: absolute;
        top: 50%; /* Adjust vertical position */
        left: 24%; /* Adjust horizontal position */
        transform: translate(-50%, -50%);
    }

    .message h1, .message h2, .message h3 {
        margin: 0;
        line-height: .8;
    }

    .message h2, .message h3 {
        font-weight: 300;
        color: #de4068;
    }

    .message h1 {
        font-weight: 700;
        color: #de4068;
        font-size: 8em;
        margin-bottom: 20px;
    }

    .message h2 {
        margin: 30px 0;
        font-size: 2.5em;
    }

    .message h3 {
        font-size: 1.5em;
    }

    .message button {
        background: transparent;
            border: 2px solid #de4068;
            color: #de4068;
        padding: 10px 20px;
        font-size: 1.25em;
        transition: all 0.15s ease;
        border-radius: 3px;
        cursor: pointer;
        outline: none;
    }

    .message button:hover {
                background: #c50032;
                border-color: #c50032;
        color: aliceblue;
        transform: scale(1.05);
    }
</style>